<div class="container home">
  <h1><%=@cocktail.name%></h1>

  <ul>
  <% Dose.where(cocktail:@cocktail).each do |dose| %>
    <li><%= dose.description%> : <%= dose.ingredient.name %> <%= link_to dose_path(dose), method: :delete,
          data: { confirm: "Are you sure?" } do %>
            <i class="far fa-trash-alt"></i>
            <% end %>
          </li>
    <% end %>
  </ul>

  <p> <%= link_to "add a dose", new_cocktail_dose_path(@cocktail) %></p>


  <p> <%= link_to "back", cocktails_path %></p>
</div>
