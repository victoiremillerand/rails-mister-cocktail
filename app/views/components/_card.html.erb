<% if cocktail.photo.url.nil? %>
  <% url = 'https://kitt.lewagon.com/placeholder/cities/random' %>
<% else %>
  <% url = cl_image_path(cocktail.photo, height: 300, width: 400, crop: :fill) %>
<% end %>
<div class="col-xs-12 col-sm-4">
  <%= link_to cocktail_path(cocktail.id) do %>
    <div class="card"
      style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= url %>')">
        <h2> <%= cocktail.name %></h2>
    </div>
  <% end %>
</div>
